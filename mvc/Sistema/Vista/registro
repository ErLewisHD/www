<script>
	var p1 = document.getElementById("password");
	var p2 = document.getElementById("password2");

	p2.onblur = function(){
		if(!p1.value.match(p2.value)) {
			alert("Las contraseñas no coinciden");
			return false;
		} else {
		  return true;
		}
	}

	function redirectIndex(){
		location.replace('../../../index.php');
	}
</script>

